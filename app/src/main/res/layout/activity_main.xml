<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.java5777.travelagencies.controller.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="Start Service"
        android:onClick="startButtonOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="96dp"
        android:id="@+id/startServiceButton" />

    <Button
        android:text="End Service"
        android:onClick="endButtonOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/startServiceButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/endServiceButton" />

    <Button
        android:text="Add Agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addAgencyButton"
        android:layout_alignBaseline="@+id/addUserButton"
        android:layout_alignBottom="@+id/addUserButton"
        android:layout_centerHorizontal="true"
        android:onClick="addAgencyButtonOnClick"/>

    <Button
        android:text="Add Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addAgencyButton"
        android:layout_toRightOf="@+id/addAgencyButton"
        android:layout_toEndOf="@+id/addAgencyButton"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/addTripButton"
        android:onClick="addTripButtonOnClick"/>

    <Button
        android:text="Add User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/addUserButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addUserButtonOnClick"/>
</RelativeLayout>
